<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>

  <settings>
  	<!-- Important setting. Will automatically map database columns with underscores to camelcase (i.e. first_name translates to firstName
  	and MyBatis will invoke setFirstName on your POJOs -->
  	<setting name="mapUnderscoreToCamelCase" value="true"/>
  </settings>
  
  <typeAliases>
        <typeAlias alias="CredentialDTO" type="com.rprescott.dndtool.server.database.login.CredentialDTO"/>
        <typeAlias alias="AbilityDTO" type="com.dndtool.model.AbilityDTO"/>
  </typeAliases>
  
</configuration>