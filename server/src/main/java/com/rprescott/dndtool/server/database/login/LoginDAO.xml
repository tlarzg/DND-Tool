<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rprescott.dndtool.server.database.login.LoginDAO">
  
  <select id="getUserCredentialByName" resultType="CredentialDTO">
    SELECT
        USER_id,
        username,
        salt,
        hash
    FROM user
    WHERE username = #{userName}
  </select>
  
</mapper>