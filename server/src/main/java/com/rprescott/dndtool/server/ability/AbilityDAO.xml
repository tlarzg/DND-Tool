<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rprescott.dndtool.server.ability.AbilityDAO">

    <insert id="createNewAbility" useGeneratedKeys="true" keyProperty="abilityId" keyColumn="ability_id">
        INSERT INTO ability (
            name,
            description
        )
        VALUES (
            #{name},
            #{description}
        )
    </insert>
    
    <select id="retrieveAllAbilities" resultType="AbilityDTO">
        SELECT name, description
        FROM ability
    </select>
    
    <select id="findAbilityByName" resultType="AbilityDTO">
        SELECT name, description
        FROM ability
        WHERE name = #{name}
    </select>

</mapper>